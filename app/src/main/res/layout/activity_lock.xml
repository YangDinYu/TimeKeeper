<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anew.Activity.MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/bfeb413825f_1024">


    <RelativeLayout
        android:layout_marginTop="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"

        android:scaleType="fitXY"

        android:src="@mipmap/blackboard" />

        <TextView
            android:id="@+id/lock_title"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="titlefsafadsf"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_below="@id/lock_title"
            android:id="@+id/lock_detail"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="titlefsafadsfaaafsaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="#ffffff"/>
    </RelativeLayout>

        <com.dd.processbutton.iml.SubmitProcessButton
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="29dp"

            android:layout_alignParentBottom="true"
            android:id="@+id/pausebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="2:30"
            android:textColor="@android:color/white"
            android:textSize="18sp"
></com.dd.processbutton.iml.SubmitProcessButton>



</RelativeLayout>
